{
  "name": "game-tracker",
  "version": "0.0.0",
  "homepage": "https://www.adamjolicoeur.me",
  "description": "Tracking games of Magic: The Gathering and other TCG scores.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "deploy-gh": "gh-pages -d dist",
    "build": "tsc && vite build",
    "start": "npm run dev",
    "start-remote": "vite --host",
    "postbuild": "node ./generate-sw-manifest.js",
    "clean-local": "npm cache clean --force && rm -rf ./node_modules/.cache",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@shoelace-style/shoelace": "^2.20.1",
    "@thepassle/app-tools": "^0.10.0",
    "keyrune": "^3.17.0",
    "lit": "^3.3.0",
    "localforage": "^1.10.0",
    "mana-font": "^1.18.0",
    "urlpattern-polyfill": "^10.1.0",
    "workbox-build": "^7.3.0"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/node": "^24.0.10",
    "@vitest/ui": "^4.0.10",
    "@web/test-runner": "^0.20.2",
    "@web/test-runner-playwright": "^0.11.1",
    "gh-pages": "^6.3.0",
    "happy-dom": "^20.0.10",
    "typescript": "^5.8.3",
    "unplugin-fonts": "^1.3.1",
    "unplugin-icons": "^22.1.0",
    "vite": "^6.2.2",
    "vite-plugin-pwa": "^1.0.1",
    "vitest": "^4.0.10",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0",
    "workbox-routing": "^7.3.0",
    "workbox-strategies": "^7.3.0"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": true,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/changelog",
      "@semantic-release/github"
    ]
  }
}
