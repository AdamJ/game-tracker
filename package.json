{
  "name": "track-it",
  "version": "0.0.0",
  "homepage": "https://www.adamjolicoeur.me",
  "description": "A set of random tools for game tracking.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev-server": "vite --open",
    "dev": "npm run dev-server",
    "dev-task": "vite",
    "deploy": "npx @azure/static-web-apps-cli login --no-use-keychain && npx @azure/static-web-apps-cli deploy",
    "deploy-gh": "gh-pages -d dist",
    "build": "tsc && vite build",
    "start": "npm run dev",
    "start-remote": "vite --host",
    "clean-local": "npm cache clean --force && rm -rf ./node_modules/.cache"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "@shoelace-style/shoelace": "^2.20.0",
    "@tailwindcss/vite": "^4.0.8",
    "@thepassle/app-tools": "^0.9.12",
    "beercss": "^3.9.7",
    "keyrune": "^3.16.1",
    "lit": "^3.2.1",
    "localforage": "^1.10.0",
    "mana-font": "^1.18.0",
    "material-dynamic-colors": "^1.1.2",
    "urlpattern-polyfill": "^10.0.0",
    "workbox-build": "^7.3.0",
    "workbox-core": "^7.3.0",
    "workbox-precaching": "^7.3.0"
  },
  "devDependencies": {
    "@types/node": "^22.13.5",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4.0.8",
    "typescript": "^5.7.3",
    "vite": "^6.1.1",
    "vite-plugin-pwa": "^0.21.1"
  },
  "prettier": {
    "tabWidth": 2,
    "useTabs": false,
    "semi": true,
    "singleQuote": true,
    "quoteProps": "consistent",
    "trailingComma": "es5",
    "endOfLine": "crlf",
    "bracketSpacing": true
  }
}
